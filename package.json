  "scripts": {
    "start": "webpack serve --config webpack.config.ts --env env=dev",
    "prepare": "husky install; git config core.ignorecase false; git config commit.template ./commit_template.txt;",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint:eslint": "eslint 'src/**/*.{tsx,ts}'",
    "lint:stylelint": "stylelint 'src/**/*.scss'",
    "lint": "yarn lint:stylelint; yarn lint:eslint",
    "fix:eslint": "yarn lint:eslint --fix --max-warnings 0",
